choice
	prompt "initramfs implementation"
	default BR2_PACKAGE_INITRAMFS_NONE

	help
		Select initramfs implementation or none.

		Note that this option controls which initramfs is visible,
		it does not select any package.

	config BR2_PACKAGE_INITRAMFS_NONE
		bool "none"

		help
			no initramfs

	comment "other choices need no init system"
		depends on !BR2_INIT_NONE

	config BR2_PACKAGE_INITRAMFS_BETTER_INITRAMFS
		bool "better-initramfs"
		depends on BR2_INIT_NONE

		help
			Solid choice for booting normal systems.

	config BR2_PACKAGE_INITRAMFS_LIRAM_INITRAMFS
		bool "liram-initramfs"
		depends on BR2_INIT_NONE

		help
			Linux In RAM. Loads systems to RAM and boots them.
			Also supports booting of normal systems, but quite limited in
			comarision with better-initramfs.

endchoice

config BR2_PACKAGE_HAS_INITRAMFS
	bool

config BR2_PACKAGE_PROVIDES_INITRAMFS
	depends on BR2_PACKAGE_HAS_INITRAMFS
	string
