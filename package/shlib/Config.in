config BR2_PACKAGE_SHLIB
	bool "shlib (library file)"

	help
		shell module library

if BR2_PACKAGE_SHLIB
config BR2_PACKAGE_SHLIB_MODULES
	string  "modules"
	default "all"

	help
		Select modules to link.

		Defaults to "all" if empty.

config BR2_PACKAGE_SHLIB_DEPFILES
	string  ".depend files"
	default ""

	help
		Specifiy dependency files of your scripts.

config BR2_PACKAGE_SHLIB_SHLIBCC_FLAGS
	string  "additional shlibcc flags"
	default "--as-lib --strip-virtual"

	help
		Specify additional shlibcc flags for linking

